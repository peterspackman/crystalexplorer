{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}"
      }
    },
    {
      "name": "macos-arm64",
      "inherits": "base",
      "displayName": "macOS Config",
      "description": "Target arm macOS with Ninja generator",
      "cacheVariables": {
        "CPACK_SYSTEM_NAME": "macos-arm64",
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "CMAKE_CXX_FLAGS": "-O2 -mmacos-version-min=11.0"
      }
    },
    {
      "name": "macos-x86_64",
      "inherits": "base",
      "displayName": "macOS Config",
      "description": "Target (intel) macOS with Ninja generator",
      "cacheVariables": {
        "CPACK_SYSTEM_NAME": "macos-x86_64",
        "CMAKE_OSX_ARCHITECTURES": "x86_64",
        "CMAKE_CXX_FLAGS": "-O2 -mmacos-version-min=11.0"
      }
    },
    {
      "name": "macos-universal",
      "inherits": "base",
      "displayName": "macOS Config",
      "description": "Target (universal) macOS with Ninja generator",
      "cacheVariables": {
        "CPACK_SYSTEM_NAME": "macos-universal",
        "CMAKE_OSX_ARCHITECTURES": "x86_64;arm64",
        "CMAKE_CXX_FLAGS": "-O2 -mmacos-version-min=11.0"
      }
    },
    {
      "name": "windows-x86_64",
      "inherits": "base",
      "displayName": "Windows x86_64 Config",
      "description": "Target Windows x86_64 with Ninja generator",
      "toolset": {
        "value": "host=x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "CPACK_SYSTEM_NAME": "windows-x86_64"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "macos-arm64",
      "configurePreset": "macos-arm64"
    },
    {
      "name": "macos-x86_64",
      "configurePreset": "macos-x86_64"
    },
    {
      "name": "macos-universal",
      "configurePreset": "macos-universal"
    },
    {
      "name": "windows-x86_64",
      "configurePreset": "windows-x86_64"
    }
  ],
  "testPresets": [
    {
      "name": "macos-arm64",
      "configurePreset": "macos-arm64",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    },
    {
      "name": "macos-x86_64",
      "configurePreset": "macos-arm64",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    },
    {
      "name": "macos-universal",
      "configurePreset": "macos-universal",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    },
    {
      "name": "windows-x86_64",
      "configurePreset": "windows-x86_64",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    }
  ],
  "packagePresets": [
    {
      "name": "macos-arm64",
      "configurePreset": "macos-arm64",
      "generators": ["DragNDrop"]
    },
    {
      "name": "macos-x86_64",
      "configurePreset": "macos-x86_64",
      "generators": ["DragNDrop"]
    },
    {
      "name": "macos-universal",
      "configurePreset": "macos-universal",
      "generators": ["DragNDrop"]
    },
    {
      "name": "windows-x86_64",
      "configurePreset": "windows-x86_64",
      "generators": ["NSIS"]
    }
  ]
}
